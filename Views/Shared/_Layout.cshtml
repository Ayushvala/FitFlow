<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitflow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Transparent navbar */
        .navbar {
            background-color: transparent !important;
            box-shadow: none; /* Remove shadow */
            border-bottom: none !important; /* Remove the bottom border */
        }

        /* Adjust text color if needed for visibility */
        .navbar-light .navbar-nav .nav-link {
            color: #ffffff !important; /* White text for navbar links */
        }
    </style>
</head>
<body class="h-100">
    <div class="row h-100 mx-0">
        <div id="sidebar" class="col-2 p-0 bg-black">
            <div class="navbar-brand text-danger" style="font-size:45px">Fitflow</div>

            <ul class="text-white">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Bodyweight" asp-action="Summary">Bodyweight Tracking</a></li>
                <li><a asp-controller="Goal" asp-action="Summary">Goal Tracking</a></li>
                <li><a asp-controller="Nutrition" asp-action="Summary">Nutrition Tracking</a></li>
                <li><a asp-controller="Workout" asp-action="Summary">Workout Plans</a></li>
                <li><a asp-controller="BMICalculation" asp-action="BMIView">
                <Body>
                    Body Mass Index
                </Body></a></li>
                <li><a asp-controller="Coach" asp-action="FitnessCoaches">Hire Trainer</a></li>
            </ul>
        </div>

        <div class="col-10 p-0">
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
                    <div class="container" style="margin-right:0!important;padding-left:0!important">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <partial name="_LoginPartial"/>
                        </div>
                    </div>
                </nav>
            </header>
            <main role="main" class="p-0 ml-3 mr-2">
                @RenderBody()
            </main>
            <script src="https://kit.fontawesome.com/a02247f0e6.js" crossorigin="anonymous"></script>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>

            <partial name="_ValidationScriptsPartial" />
            @RenderSection("Scripts", required: false)
        </div>
    </div>
</body>
</html>
