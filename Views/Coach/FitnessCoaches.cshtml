@model List<FitnessTracker.Models.FitnessCoachModel>

@{
    ViewData["Title"] = "Fitness Coaches";
}

<h1 id="ayush">Meet Our Expert Fitness Trainers</h1>


<div class="coach-list">
    @foreach (var FitnessCoach in Model)
    {
        <div class="coach-card">
            <img src="@FitnessCoach.ImageUrl" alt="Coach @FitnessCoach.Name" class="coach-image" />
            <h2>@FitnessCoach.Name</h2>
            <p><strong>Specialty:</strong> @FitnessCoach.Specialty</p>
            <p><strong>Email:</strong> <a href="">@FitnessCoach.Email</a></p>
        </div>
    }
</div>

<style>

    #ayush {
        margin-left: 40px;
        margin-top: 60px;
    }
    .coach-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top : 150px;
        margin-left : 200px;
    }

    .coach-card {
        width: 250px;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .coach-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    h2 {
        margin-top: 10px;
        font-size: 1.25rem;
        color: #333;
    }

    p {
        color: #555;
    }

    a {
        text-decoration: none;
        color: #0066cc;
    }
</style>
